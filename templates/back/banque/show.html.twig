{% extends 'base.html.twig' %}

{% block title %}Détails de la Banque{% endblock %}
{% block page_title %}Détails de la Banque{% endblock %}
{% block breadcrumb %}<a href="{{ path('app_dashboard') }}">Dashboard</a> / <a href="{{ path('app_banque_index') }}">Banques</a> / <span class="active">Détails</span>{% endblock %}

{% block body %}
    <div class="content-card">
        <div class="card-header">
            <h3><i class="fas fa-info-circle me-2"></i>Détails de la banque</h3>
            <div class="d-flex gap-2">
                <a href="{{ path('app_banque_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i> Retour
                </a>
                <a href="{{ path('app_banque_edit', {'id': banque.id}) }}" class="btn btn-outline-success">
                    <i class="fas fa-edit me-2"></i> Modifier
                </a>
            </div>
        </div>
        
        <!-- En-tête avec logo et informations principales -->
        <div class="bank-header mb-5">
            <div class="row align-items-center">
                <div class="col-md-3 text-center">
                    <div class="bank-logo-display">
                        <i class="fas fa-university"></i>
                        <h5 class="mt-3">{{ banque.nom }}</h5>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-tag me-2"></i>Type</span>
                                <span class="info-value">{{ banque.type }}</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-circle me-2"></i>Statut</span>
                                <span class="info-value badge bg-success">{{ banque.statut }}</span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-item">
                                <span class="info-label"><i class="fas fa-calendar-alt me-2"></i>Date création</span>
                                <span class="info-value">{{ banque.date_creation }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Informations détaillées -->
        <div class="row">
            <div class="col-md-6">
                <div class="detail-section mb-4">
                    <h5 class="section-title"><i class="fas fa-info-circle me-2"></i>Informations Générales</h5>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Site Web</span>
                            <span class="detail-value">
                                <a href="https://{{ banque.site_web }}" target="_blank">{{ banque.site_web }}</a>
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Téléphone</span>
                            <span class="detail-value">{{ banque.telephone }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Email</span>
                            <span class="detail-value">{{ banque.email }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Adresse</span>
                            <span class="detail-value">{{ banque.adresse }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Ville</span>
                            <span class="detail-value">{{ banque.ville }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Code Postal</span>
                            <span class="detail-value">{{ banque.code_postal }}</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="detail-section mb-4">
                    <h5 class="section-title"><i class="fas fa-user-tie me-2"></i>Responsable</h5>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Nom du responsable</span>
                            <span class="detail-value">{{ banque.responsable }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Téléphone responsable</span>
                            <span class="detail-value">{{ banque.tel_responsable }}</span>
                        </div>
                    </div>
                </div>
                
                <!-- SUPPRIMÉ: Table de statistiques -->
                <!-- 
                <div class="detail-section mb-4">
                    <h5 class="section-title"><i class="fas fa-chart-bar me-2"></i>Statistiques</h5>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Nombre d'agences</span>
                            <span class="detail-value badge bg-primary">{{ banque.agences }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Nombre d'employés</span>
                            <span class="detail-value badge bg-info">{{ banque.employes }}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Capital</span>
                            <span class="detail-value">{{ banque.capital }}</span>
                        </div>
                    </div>
                </div>
                -->
            </div>
        </div>
        
        <!-- Services offerts -->
        <div class="detail-section mb-4">
            <h5 class="section-title"><i class="fas fa-concierge-bell me-2"></i>Services Offerts</h5>
            <div class="services-display">
                {% for service in banque.services %}
                <span class="service-badge">
                    <i class="fas fa-check-circle me-1"></i>{{ service }}
                </span>
                {% endfor %}
            </div>
        </div>
        
        <!-- Description -->
        <div class="detail-section">
            <h5 class="section-title"><i class="fas fa-file-alt me-2"></i>Description</h5>
            <div class="description-content">
                <p>{{ banque.description }}</p>
            </div>
        </div>
    </div>
    
    <style>
        .bank-header {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 15px;
            padding: 30px;
            border: 1px solid #dee2e6;
        }
        
        .bank-logo-display {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            border: 2px solid #4f46e5;
        }
        
        .bank-logo-display i {
            font-size: 60px;
            color: #4f46e5;
        }
        
        .bank-logo-display h5 {
            font-weight: 700;
            color: #4f46e5;
        }
        
        .info-item {
            background: white;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
        }
        
        .info-label {
            display: block;
            font-size: 12px;
            color: #6c757d;
            text-transform: uppercase;
            font-weight: 600;
            margin-bottom: 5px;
        }
        
        .info-value {
            display: block;
            font-size: 16px;
            font-weight: 700;
            color: #212529;
        }
        
        .detail-section {
            background: white;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            border: 1px solid #e9ecef;
            height: 100%;
        }
        
        .section-title {
            color: #4f46e5;
            font-weight: 600;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #f1f5f9;
        }
        
        .detail-grid {
            display: grid;
            gap: 15px;
        }
        
        .detail-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px 0;
            border-bottom: 1px solid #f1f5f9;
        }
        
        .detail-item:last-child {
            border-bottom: none;
        }
        
        .detail-label {
            font-weight: 500;
            color: #6c757d;
            font-size: 14px;
        }
        
        .detail-value {
            font-weight: 600;
            color: #212529;
            text-align: right;
        }
        
        .services-display {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
        }
        
        .service-badge {
            background: #e0e7ff;
            color: #4f46e5;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }
        
        .service-badge:hover {
            background: #4f46e5;
            color: white;
            transform: translateY(-2px);
        }
        
        .service-badge i {
            font-size: 12px;
        }
        
        .description-content {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            line-height: 1.6;
            color: #495057;
        }
        
        .badge {
            padding: 5px 12px;
            font-weight: 600;
        }
    </style>
{% endblock %}