{% extends 'back/base_agent.html.twig' %}

{% block body %}
<div class="mb-4">
    <h1>Dashboard Agent</h1>
    <p class="text-muted">{{ banque.nomBq }}</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card border-success">
            <div class="card-body">
                <h6 class="text-muted">Clients</h6>
                <h2>{{ stats.total_utilisateurs ?? 0 }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-warning">
            <div class="card-body">
                <h6 class="text-muted">RDV en attente</h6>
                <h2>{{ stats.pending_rdv ?? 0 }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-info">
            <div class="card-body">
                <h6 class="text-muted">RDV aujourd'hui</h6>
                <h2>{{ stats.today_rdv ?? 0 }}</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-danger">
            <div class="card-body">
                <h6 class="text-muted">Demandes financement</h6>
                <h2>{{ stats.pending_financements ?? 0 }}</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Rendez-vous aujourd'hui</h5>
            </div>
            <div class="card-body">
                {% if today_rdv|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Heure</th>
                                    <th>Client</th>
                                    <th>Service</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for rdv in today_rdv %}
                                    <tr>
                                        <td>{{ rdv.heureRdv|date('H:i') }}</td>
                                        <td>{{ rdv.client.nom }}</td>
                                        <td>{{ rdv.service.nomService }}</td>
                                        <td><span class="badge {{ rdv.statutBadge }}">{{ rdv.statutLabel }}</span></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucun rendez-vous aujourd'hui</p>
                {% endif %}
                <a href="{{ path('agent_rdv_today') }}" class="btn btn-sm btn-outline-success mt-2">Voir tous</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0">Demandes de financement en attente</h5>
            </div>
            <div class="card-body">
                {% if pending_financements|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for fin in pending_financements %}
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>{{ fin.client.nom }}</strong><br>
                                    <small class="text-muted">{{ fin.formattedMontant }}</small>
                                </div>
                                <a href="{{ path('agent_financement_index') }}" class="btn btn-sm btn-outline-primary">Traiter</a>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted">Aucune demande en attente</p>
                {% endif %}
                <a href="{{ path('agent_financement_index') }}" class="btn btn-sm btn-outline-success mt-2">Voir toutes</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5>Actions rapides</h5>
                <div class="btn-group mt-2">
                    <a href="{{ path('agent_service_new') }}" class="btn btn-success">Nouveau service</a>
                    <a href="{{ path('agent_offre_new') }}" class="btn btn-primary">Nouvelle offre</a>
                    <a href="{{ path('agent_agence_new') }}" class="btn btn-info">Nouvelle agence</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}