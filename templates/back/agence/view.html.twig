{% extends 'back/base_agent.html.twig' %}

{% block title %}Détails de l'agence{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: var(--dark-gray); font-weight: 800;">
                {{ agence.nomAg }}
            </h2>
            <p class="mb-0" style="color: var(--medium-gray);">
                Détails de l'agence
            </p>
        </div>

        <div class="d-flex gap-2">
            <a href="{{ path('agent_banque_view') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>

            <a href="{{ path('agent_agence_edit', {id: agence.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>

            <form method="post" action="{{ path('agent_agence_delete', {id: agence.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('agent_agence_delete_' ~ agence.id) }}">
                <button type="submit"
                        class="btn btn-outline-danger"
                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette agence ?')">
                    <i class="bi bi-trash"></i> Supprimer
                </button>
            </form>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-3" style="color: var(--dark-gray); font-weight: 700;">Informations</h5>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 rounded" style="background: #f8f9fa;">
                                <div style="color: var(--medium-gray); font-size: .85rem; font-weight: 600;">Adresse</div>
                                <div style="color: var(--dark-gray);">
                                    {{ agence.adresseAg ?: '—' }}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 rounded" style="background: #f8f9fa;">
                                <div style="color: var(--medium-gray); font-size: .85rem; font-weight: 600;">Téléphone</div>
                                <div style="color: var(--dark-gray);">
                                    {{ agence.telephone ?: '—' }}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 rounded" style="background: #f8f9fa;">
                                <div style="color: var(--medium-gray); font-size: .85rem; font-weight: 600;">Email</div>
                                <div style="color: var(--dark-gray);">
                                    {{ agence.email ?: '—' }}
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="p-3 rounded" style="background: #f8f9fa;">
                                <div style="color: var(--medium-gray); font-size: .85rem; font-weight: 600;">Horaires</div>
                                <div style="color: var(--dark-gray);">
                                    {{ agence.horaires ?: '—' }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h6 class="mb-2" style="color: var(--dark-gray); font-weight: 700;">Banque</h6>
                    <div class="p-3 rounded" style="background: #f8f9fa;">
                        <div style="color: var(--dark-gray); font-weight: 700;">
                            {{ agence.banque.nomBq }}
                        </div>
                        <div style="color: var(--medium-gray); font-size: .9rem;">
                            {{ agence.banque.siteWeb ?: '' }}
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-3" style="color: var(--dark-gray); font-weight: 700;">Actions rapides</h5>

                    <a href="{{ path('agent_agence_edit', {id: agence.id}) }}" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>

                    <a href="{{ path('agent_banque_view') }}" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-building"></i> Retour à Ma banque
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}