{% extends 'back/base_agent.html.twig' %}

{% block title %}Détails agence{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Agence : {{ agence.nomAg }}</h1>
            <p class="text-muted mb-0">Détails de l'agence</p>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('agent_agence_edit', {id: agence.id}) }}" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('agent_banque_view') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="text-muted small fw-semibold">Adresse</div>
                        <div>{{ agence.adresseAg ?: '—' }}</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small fw-semibold">Téléphone</div>
                        <div>{{ agence.telephone ?: '—' }}</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small fw-semibold">Email</div>
                        <div>{{ agence.email ?: '—' }}</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <div class="text-muted small fw-semibold">Horaires</div>
                        <div style="white-space: pre-line;">{{ agence.horaires ?: '—' }}</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small fw-semibold">Banque</div>
                        <div>{{ agence.banque ? agence.banque.nomBq : '—' }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card { border: none; border-radius: 15px; }
    </style>
</div>
{% endblock %}