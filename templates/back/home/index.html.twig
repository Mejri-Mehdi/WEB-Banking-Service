            </p>
            
            <div class="cta-buttons">
                <a href="{{ path('app_register') }}" class="btn btn-primary">
                    <i class="fas fa-play-circle"></i> Commencer maintenant
                </a>
                <a href="{{ path('app_login') }}" class="btn btn-secondary">
