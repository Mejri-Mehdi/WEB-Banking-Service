<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th><i class="bi bi-person"></i> Client</th>
                <th><i class="bi bi-briefcase"></i> Service</th>
                <th><i class="bi bi-building"></i> Agence</th>
                <th><i class="bi bi-calendar3"></i> Date & Heure</th>
                <th><i class="bi bi-info-circle"></i> Statut</th>
                <th><i class="bi bi-gear"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for rdv in rendez_vous %}
                <tr>
                    <td>
                        <div class="fw-bold">{{ rdv.client.fullName }}</div>
                        <div class="small text-muted">{{ rdv.client.email }}</div>
                        <div class="small text-muted">{{ rdv.client.telephone }}</div>
                    </td>
                    <td>{{ rdv.service.nomService }}</td>
                    <td>{{ rdv.agence.nomAg }}</td>
                    <td>
                        <div class="fw-bold">{{ rdv.dateRdv|date('d/m/Y') }}</div>
                        <div class="text-primary">{{ rdv.heureRdv|date('H:i') }}</div>
                    </td>
                    <td>
                        <span class="badge {{ rdv.statutBadge }}">{{ rdv.statutLabel }}</span>
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <form method="post" action="{{ path('agent_rdv_update_status', {id: rdv.id}) }}">
                                <select name="statut" class="form-select form-select-sm" onchange="this.form.submit()" style="width: 130px;">
                                    <option value="pending" {{ rdv.statut == 'pending' ? 'selected' : '' }}>En attente</option>
                                    <option value="confirmed" {{ rdv.statut == 'confirmed' ? 'selected' : '' }}>Confirmé</option>
                                    <option value="completed" {{ rdv.statut == 'completed' ? 'selected' : '' }}>Traité/Fini</option>
                                    <option value="cancelled" {{ rdv.statut == 'cancelled' ? 'selected' : '' }}>Annulé</option>
                                </select>
                            </form>
                            
                            <button type="button" class="btn btn-sm btn-outline-warning" 
                                    data-bs-toggle="modal" 
                                    data-bs-target="#delayModal" 
                                    data-rdv-id="{{ rdv.id }}"
                                    data-rdv-date="{{ rdv.dateRdv|date('Y-m-d') }}"
                                    data-rdv-time="{{ rdv.heureRdv|date('H:i') }}">
                                <i class="bi bi-clock-history"></i> Reporter
                            </button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center py-5">
                        <div class="text-muted">
                            <i class="bi bi-search h3 d-block mb-3"></i>
                            Aucun rendez-vous trouvé
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
