            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 110%;
            height: 110%;
            border: 3px solid rgba(251, 191, 36, 0.4);
            border-radius: 50%;
            animation: rotate 20s linear infinite;
