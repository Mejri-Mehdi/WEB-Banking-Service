    <script>
        // Toggle password visibility
        function togglePasswordVisibility(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Password match validation
        const plainPassword = document.getElementById('plainPassword');
        const confirmPassword = document.getElementById('confirmPassword');
        const matchIndicator = document.getElementById('passwordMatchIndicator');
        const matchError = document.getElementById('passwordMatchError');

        function validatePasswordMatch() {
            if (confirmPassword.value === '') {
                matchIndicator.innerHTML = '';
                matchError.style.display = 'none';
                return true;
            }

            if (plainPassword.value === confirmPassword.value) {
                matchIndicator.innerHTML = '<i class="bi bi-check-circle-fill text-success ms-2"></i>';
                matchError.style.display = 'none';
                return true;
            } else {
                matchIndicator.innerHTML = '<i class="bi bi-x-circle-fill text-danger ms-2"></i>';
                matchError.style.display = 'block';
                return false;
            }
        }

        confirmPassword.addEventListener('keyup', validatePasswordMatch);
        plainPassword.addEventListener('keyup', validatePasswordMatch);

        // Show/hide bank details based on role
        const roleRadios = document.querySelectorAll('input[name="role"]');
        const bankDetailsSection = document.getElementById('bankDetailsSection');
        const clientBankSelection = document.getElementById('clientBankSelection');
        const bankSelectDropdown = document.getElementById('banque_select');
        const bankFields = ['bank_name', 'agent_identifiant', 'bank_email', 'bank_type', 'bank_postal_code', 'bank_address'];

        function toggleBankDetails() {
            const selectedRole = document.querySelector('input[name="role"]:checked').value;
            
            if (selectedRole === 'agent') {
                // Agent: Show bank details section, hide dropdown
                bankDetailsSection.style.display = 'block';
                clientBankSelection.style.display = 'none';
                bankSelectDropdown.required = false;
                
                // Make bank fields required for agents
                bankFields.forEach(fieldId => {
                    const field = document.getElementById(fieldId);
                    if (field) field.required = true;
                });
            } else {
                // Client: Hide bank details section, show dropdown
                bankDetailsSection.style.display = 'none';
                clientBankSelection.style.display = 'block';
                bankSelectDropdown.required = true;
                
                // Make bank fields not required for clients
                bankFields.forEach(fieldId => {
                    const field = document.getElementById(fieldId);
                    if (field) field.required = false;
                });
            }
        }

        roleRadios.forEach(radio => {
            radio.addEventListener('change', toggleBankDetails);
        });

        // Handle bank name dropdown - show/hide custom input when "Autre" is selected
        const bankNameSelect = document.getElementById('bank_name_select');
        const customBankNameField = document.getElementById('custom_bank_name_field');
        const bankNameCustomInput = document.getElementById('bank_name_custom');

        if (bankNameSelect) {
            bankNameSelect.addEventListener('change', function() {
                if (this.value === 'autre') {
                    customBankNameField.style.display = 'block';
                    bankNameCustomInput.required = true;
                    bankNameSelect.required = false;
                } else {
                    customBankNameField.style.display = 'none';
                    bankNameCustomInput.required = false;
                    bankNameSelect.required = true;
                }
            });
        }

        // Form submission validation
        document.querySelector('form').addEventListener('submit', function(e) {
            if (!validatePasswordMatch()) {
                e.preventDefault();
                alert('Les mots de passe ne correspondent pas. Veuillez v√©rifier.');
                return false;
            }
        });
    </script>
