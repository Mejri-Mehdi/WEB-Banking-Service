{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('client_rdv_list') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Retour à mes rendez-vous
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-lg border-0">
            <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);">
                <h3 class="mb-0">
                    <i class="bi bi-ticket-perforated"></i> Ticket de rendez-vous
                </h3>
            </div>

            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="d-inline-block p-4 bg-light rounded-3 shadow-sm">
                        <div class="bg-white p-3 rounded">
                            {% if rdv.qrCode %}
                                <img src="{{ rdv.qrCode }}" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                            {% else %}
                                <div style="width: 200px; height: 200px;" class="bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center rounded">
                                    <i class="bi bi-qr-code text-muted" style="font-size: 4rem;"></i>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <h4 class="text-primary mb-2">{{ rdv.ticketReference }}</h4>
                    <span class="badge {{ rdv.statutBadge }} px-4 py-2" style="font-size: 1rem;">
                        {{ rdv.statutLabel }}
                    </span>
                </div>

                <hr class="my-4">

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-calendar3 text-primary"></i> DATE
                            </label>
                            <p class="h5 mb-0">{{ rdv.dateRdv|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-clock text-primary"></i> HEURE
                            </label>
                            <p class="h5 mb-0">{{ rdv.heureRdv|date('H:i') }}</p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3 border border-primary bg-opacity-10">
                            <label class="text-primary small fw-bold mb-2">
                                <i class="bi bi-person-workspace"></i> GUICHET
                            </label>
                            <p class="h4 mb-0 text-primary">N° {{ rdv.numeroGuichet }}</p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-briefcase text-primary"></i> SERVICE
                            </label>
                            <p class="h5 mb-0">{{ rdv.service.nomService }}</p>
                            {% if rdv.service.description %}
                                <p class="text-muted small mb-0 mt-2">{{ rdv.service.description }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-building text-primary"></i> AGENCE
                            </label>
                            <p class="h5 mb-2">{{ rdv.agence.nomAg }}</p>
                            <p class="text-muted mb-1">
                                <i class="bi bi-geo-alt"></i> {{ rdv.agence.adresseAg }}
                            </p>
                            <p class="text-muted mb-1">
                                <i class="bi bi-telephone"></i> {{ rdv.agence.telephone }}
                            </p>
                            {% if rdv.agence.horaires %}
                                <p class="text-muted mb-0">
                                    <i class="bi bi-clock"></i> {{ rdv.agence.horaires }}
                                </p>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="info-group p-3 bg-light rounded-3">
                            <label class="text-muted small fw-bold mb-2">
                                <i class="bi bi-building-check text-primary"></i> BANQUE
                            </label>
                            <p class="h5 mb-0">{{ rdv.banque.nomBq }}</p>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="alert alert-info border-0 shadow-sm">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle"></i> Informations importantes
                    </h6>
                    <ul class="small mb-0">
                        <li>Présentez ce ticket (QR code) à votre arrivée</li>
                        <li>Arrivez 10 minutes avant l'heure prévue</li>
                        <li>Apportez vos documents d'identité</li>
                        <li>En cas d'empêchement, annulez votre rendez-vous 24h à l'avance</li>
                    </ul>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button onclick="window.print()" class="btn btn-lg btn-outline-primary">
                        <i class="bi bi-printer"></i> Imprimer le ticket
                    </button>
                    <a href="{{ path('client_rdv_download_ticket', {id: rdv.id}) }}" class="btn btn-lg btn-primary">
                        <i class="bi bi-file-earmark-pdf"></i> Télécharger le PDF
                    </a>
                    {% if rdv.statut in ['pending', 'confirmed'] %}
                        <form method="post" action="{{ path('client_rdv_cancel', {id: rdv.id}) }}">
                            <button type="submit" class="btn btn-lg btn-outline-danger w-100" onclick="return confirm('Êtes-vous sûr de vouloir annuler ce rendez-vous ?')">
                                <i class="bi bi-x-circle"></i> Annuler le rendez-vous
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @media print {
        @page {
            margin: 0.5cm;
            size: auto;
        }

        /* Hide everything by default */
        body, html {
            background: white !important;
            margin: 0 !important;
            padding: 0 !important;
            height: auto !important;
            overflow: visible !important;
        }

        body * {
            display: none;
        }

        /* Show only the card and its children */
        .card, .card * {
            display: block !important;
            visibility: visible !important;
        }

        .row, .col-lg-8, .main-content, .content-wrapper, .container {
             display: block !important;
             margin: 0 !important;
             padding: 0 !important;
             width: 100% !important;
             height: auto !important;
        }

        .card {
            position: relative !important;
            display: block !important;
            left: 0 !important;
            top: 0 !important;
            width: 100% !important;
            max-width: 210mm !important; /* A4 width */
            margin: 0 auto !important;
            padding: 0 !important;
            border: 1px solid #ddd !important;
            box-shadow: none !important;
            page-break-inside: avoid;
            background-color: white !important;
        }

        /* Scale down if necessary to fit on one page */
        body {
            zoom: 90%;
        }

        .card-header {
            background: #0d6efd !important;
            color: white !important;
            print-color-adjust: exact;
            -webkit-print-color-adjust: exact;
        }
        
        .card-body {
            padding: 1rem !important;
        }

        /* Ensure images scale down if needed */
        img {
            max-width: 100% !important;
            height: auto !important;
        }
        
        /* Flex containers need to be flex for layout */
        .d-flex, .row, .col-md-6 {
            display: flex !important;
        }
        
        .d-inline-block {
            display: inline-block !important;
        }

        /* Hide buttons definitively */
        .btn, .sidebar, .navbar, .alert, footer, .d-grid {
            display: none !important;
        }
    }

    .info-group {
        transition: all 0.3s ease;
    }
    .info-group:hover {
        background: linear-gradient(135deg, #0d6efd15 0%, #0a58ca15 100%) !important;
        transform: translateX(5px);
    }
</style>
{% endblock %}
