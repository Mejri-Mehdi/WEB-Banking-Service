{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center">
    <div>
        <h1 class="mb-1">
            <i class="bi bi-geo-alt text-primary"></i>
            {{ agence.nomAg ?: 'Agence' }}
        </h1>
        <p class="text-muted mb-0">Détails de l’agence</p>
    </div>

    <a href="{{ path('client_banque') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Retour
    </a>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="mb-3">
                    <div class="text-muted small">Banque</div>
                    <div class="fw-semibold">{{ banque.nomBq }}</div>
                </div>

                <div class="mb-3">
                    <div class="text-muted small">Nom de l’agence</div>
                    <div class="fw-semibold">{{ agence.nomAg ?: '—' }}</div>
                </div>

                <div class="mb-3">
                    <div class="text-muted small">Téléphone</div>
                    <div><i class="bi bi-telephone"></i> {{ agence.telephone ?: '—' }}</div>
                </div>

                <div class="mb-3">
                    <div class="text-muted small">Email</div>
                    <div><i class="bi bi-envelope"></i> {{ agence.email ?: '—' }}</div>
                </div>

                <div class="mb-3">
                    <div class="text-muted small">Adresse</div>
                    <div>{{ agence.adresseAg ?: '—' }}</div>
                </div>

                {% if agence.horaires %}
                    <div class="mb-0">
                        <div class="text-muted small">Horaires</div>
                        <div><i class="bi bi-clock"></i> {{ agence.horaires }}</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex align-items-center justify-content-center text-center">
                <div>
                    <i class="bi bi-building text-muted" style="font-size:3rem;"></i>
                    <p class="text-muted mt-3 mb-0">
                        Rien de magique ici. Juste une agence, avec ses infos, comme prévu.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}