{% extends 'front/base_client.html.twig' %}

{% block body %}
<div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-4">
    <div>
        <h1 class="mb-1">
            <i class="bi bi-building text-primary me-2"></i>{{ banque.nomBq }}
        </h1>
        <p class="text-muted mb-0">Informations détaillées sur la banque</p>
    </div>

    <div class="d-flex gap-2">
        <a href="{{ path('client_autres_banques') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour
        </a>
        {% if userBanque and userBanque.id == banque.id %}
            <a href="{{ path('client_banque') }}" class="btn btn-primary">
                <i class="bi bi-bank me-2"></i>Ma banque
            </a>
        {% endif %}
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card shadow-sm border-0 h-100" style="border-radius: 16px;">
            <div class="card-body text-center">
                {% if banque.logo %}
                    <img src="{{ asset(banque.logo) }}"
                         alt="Logo {{ banque.nomBq }}"
                         style="width:140px;height:140px;object-fit:contain;border-radius:24px;background:#fff;border:1px solid #e9ecef;padding:10px;">
                {% else %}
                    <div style="width:140px;height:140px;margin:0 auto;border-radius:24px;background:#f8fafc;border:1px solid #e9ecef;display:flex;align-items:center;justify-content:center;color:#9aa3af;font-size:2.2rem;">
                        <i class="bi bi-building"></i>
                    </div>
                {% endif %}

                <h4 class="mt-3 mb-0">{{ banque.nomBq }}</h4>
                <div class="text-muted small mt-1">Banque</div>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card shadow-sm border-0" style="border-radius: 16px;">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-info-circle me-2"></i>Détails</h5>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="text-muted small">Site web</div>
                        {% if banque.siteWeb %}
                            <a href="{{ banque.siteWeb }}" target="_blank" rel="noopener" class="text-decoration-none">
                                {{ banque.siteWeb }} <i class="bi bi-box-arrow-up-right"></i>
                            </a>
                        {% else %}
                            <div class="text-muted">—</div>
                        {% endif %}
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">Email</div>
                        {% if banque.emailBq %}
                            <div><i class="bi bi-envelope me-2"></i>{{ banque.emailBq }}</div>
                        {% else %}
                            <div class="text-muted">—</div>
                        {% endif %}
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">Téléphone</div>
                        {% if banque.telephoneBq %}
                            <div><i class="bi bi-telephone me-2"></i>{{ banque.telephoneBq }}</div>
                        {% else %}
                            <div class="text-muted">—</div>
                        {% endif %}
                    </div>

                    <div class="col-12">
                        <div class="text-muted small">Description</div>
                        {% if banque.description %}
                            <div class="mt-1">{{ banque.description }}</div>
                        {% else %}
                            <div class="text-muted">—</div>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}