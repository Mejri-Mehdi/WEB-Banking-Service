{% extends 'front/base_client.html.twig' %}

{% block title %}Mes Financements{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold">Mes Dossiers</h2>
        </div>
        <div class="col-md-6 text-end">
            <div class="d-flex gap-2 justify-content-end">
                <div class="input-group" style="max-width: 250px;">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" id="params-search" class="form-control border-start-0" placeholder="Rechercher...">
                </div>
                <a href="{{ path('client_financement_simulation') }}" class="btn btn-outline-primary">
                    <i class="bi bi-calculator"></i> Simulateur
                </a>
                <a href="{{ path('client_financement_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nouveau
                </a>
            </div>
        </div>
    </div>

    <div class="row g-4" id="search-results">
        {% include 'front/financement/_table.html.twig' %}
    </div>
</div>

<script src="{{ asset('js/search.js') }}"></script>
<script>
    const searchInput = document.getElementById('params-search');
    const resultsContainer = document.getElementById('search-results');
    
    if (searchInput && resultsContainer) {
        searchInput.id = 'search-input';
    }
</script>
{% endblock %}
