    {% for offre in offres %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0 hover-shadow transition-all">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <span class="badge bg-primary-subtle text-primary rounded-pill px-3 py-2">{{ offre.typeOffre }}</span>
                        {% if offre.taux %}
                            <span class="badge bg-warning text-dark rounded-pill px-3 py-2">Taux: {{ offre.taux }}%</span>
                        {% endif %}
                    </div>
                    
                    <h5 class="fw-bold text-dark mb-2">{{ offre.titre }}</h5>
                    <p class="text-muted small mb-3" style="min-height: 3em;">{{ offre.description|length > 100 ? offre.description|slice(0, 100) ~ '...' : offre.description }}</p>
                    
                    <div class="d-flex justify-content-between text-muted small border-top pt-3 mt-3">
                        <div>
                            <i class="bi bi-cash me-1"></i>
                            {{ offre.montantMin|number_format(0, '.', ' ') }} - {{ offre.montantMax|number_format(0, '.', ' ') }} DT
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top-0 p-4 pt-0">
                    <div class="d-grid gap-2">
                        <a href="{{ path('client_financement_simulation') }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-calculator me-2"></i>Simuler
                        </a>
                        <a href="{{ path('client_financement_new', {'offre_id': offre.id}) }}" class="btn btn-primary btn-sm">
                            <i class="bi bi-check-circle me-2"></i>Postuler
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 text-center py-5">
            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
            <h4 class="text-muted">Aucune offre ne correspond Ã  votre recherche.</h4>
        </div>
    {% endfor %}
