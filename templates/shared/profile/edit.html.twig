{% set isClient = app.user and 'ROLE_CLIENT' in app.user.roles %}
{% set isAgent = app.user and 'ROLE_AGENT' in app.user.roles %}
{% set isAdmin = app.user and 'ROLE_ADMIN' in app.user.roles %}

{% if isClient %}
    {% set baseTemplate = 'front/base_client.html.twig' %}
{% elseif isAgent %}
    {% set baseTemplate = 'back/base_agent.html.twig' %}
{% elseif isAdmin %}
    {% set baseTemplate = 'admin/base_admin.html.twig' %}
{% else %}
    {% set baseTemplate = 'base.html.twig' %}
{% endif %}

{% extends baseTemplate %}

{% block body %}
<div class="container-fluid">
    <div class="row" style="max-width: 900px; margin: 0 auto;">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="mb-1"><i class="bi bi-pencil-square me-2" style="color: var(--primary-color);"></i>Modifier mon profil</h1>
                    <p class="text-muted mb-0">Mettez à jour vos informations personnelles</p>
                </div>
                <a href="{{ path('app_profile_view') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Retour
                </a>
            </div>

            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- Photo Upload Section -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-body text-center">
                                <h5 class="card-title mb-3"><i class="bi bi-camera me-2"></i>Photo de profil</h5>
                                
                                <div class="mb-3">
                                    {% if user.photo %}
                                        <img src="{{ asset('uploads/profiles/' ~ user.photo) }}" alt="Photo" 
                                             id="photoPreview" class="rounded-circle mb-3" 
                                             style="width: 150px; height: 150px; object-fit: cover; border: 4px solid var(--primary-color);">
                                    {% else %}
                                        <div id="photoPreview" class="rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-3" 
                                             style="width: 150px; height: 150px; font-size: 4rem; color: #ccc;">
                                            <i class="bi bi-person-fill"></i>
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="mb-3">
                                    <label for="photo" class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-upload me-2"></i>Choisir une photo
                                    </label>
                                    <input type="file" id="photo" name="photo" class="d-none" accept="image/*" onchange="previewPhoto(this)">
                                </div>

                                {% if user.photo %}
                                    <form method="post" action="{{ path('app_profile_photo_delete') }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_photo') }}">
                                        <button type="submit" class="btn btn-outline-danger btn-sm w-100"
                                                onclick="return confirm('Supprimer la photo de profil?')">
                                            <i class="bi bi-trash me-2"></i>Supprimer la photo
                                        </button>
                                    </form>
                                {% endif %}

                                <small class="text-muted d-block mt-3">JPG, PNG ou GIF. Max 2MB.</small>
                            </div>
                        </div>
                    </div>

                    <!-- Form Fields -->
                    <div class="col-md-8 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white py-3">
                                <h5 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i>Informations personnelles</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="nom" class="form-label">Nom <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="nom" name="nom" value="{{ user.nom }}" required>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="prenom" class="form-label">Prénom <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="prenom" name="prenom" value="{{ user.prenom }}" required>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                            <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="telephone" class="form-label">Téléphone</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                            <input type="tel" class="form-control" id="telephone" name="telephone" 
                                                   value="{{ user.telephone }}" placeholder="20 123 456"
                                                   pattern="[0-9]{8}" title="Le numéro de téléphone doit contenir 8 chiffres">
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="cin" class="form-label">CIN</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                            <input type="text" class="form-control" id="cin" name="cin" 
                                                   value="{{ user.cin }}" placeholder="12345678"
                                                   pattern="[0-9]{8}" title="Le CIN doit contenir 8 chiffres">
                                        </div>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label for="adresse" class="form-label">Adresse</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                            <textarea class="form-control" id="adresse" name="adresse" rows="2" 
                                                      placeholder="Rue, Ville">{{ user.adresse }}</textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="code_postal" class="form-label">Code Postal</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-mailbox"></i></span>
                                            <input type="text" class="form-control" id="code_postal" name="code_postal" 
                                                   value="{{ user.codePostal }}" placeholder="1000" maxlength="4"
                                                   pattern="[0-9]{4}" title="Le code postal doit contenir 4 chiffres">
                                        </div>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-fill">
                                        <i class="bi bi-check-circle me-2"></i>Enregistrer les modifications
                                    </button>
                                    <a href="{{ path('app_profile_view') }}" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i>Annuler
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function previewPhoto(input) {
    const preview = document.getElementById('photoPreview');
    
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        
        reader.onload = function(e) {
            if (preview.tagName === 'IMG') {
                preview.src = e.target.result;
            } else {
                // If it's a div (placeholder), replace it with an img
                const img = document.createElement('img');
                img.src = e.target.result;
                img.id = 'photoPreview';
                img.className = 'rounded-circle mb-3';
                img.style.width = '150px';
                img.style.height = '150px';
                img.style.objectFit = 'cover';
                img.style.border = '4px solid var(--primary-color)';
                
                preview.parentNode.replaceChild(img, preview);
            }
        };
        
        reader.readAsDataURL(input.files[0]);
    }
}
</script>

<style>
    .card {
        border: none;
        border-radius: 15px;
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(var(--primary-color-rgb), 0.25);
    }
    
    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }
    
    .input-group .form-control {
        border-left: none;
    }
    
    .input-group:focus-within .input-group-text {
        border-color: var(--primary-color);
    }
</style>
{% endblock %}
