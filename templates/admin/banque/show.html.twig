{% extends 'admin/base_admin.html.twig' %}

{% block body %}
<style>
    .wrap{max-width:980px}
    .hero{display:flex;gap:18px;align-items:center;margin-bottom:16px}
    .logo{width:72px;height:72px;object-fit:contain;border-radius:16px;background:#fff;border:1px solid #eee}
    .title{margin:0;font-size:30px;font-weight:800}
    .sub{color:#6c757d}
    .box{background:#fff;border:1px solid #e9ecef;border-radius:16px;padding:18px}
    .rowish{display:grid;grid-template-columns:1fr 1fr;gap:14px}
    .label{font-size:.85rem;color:#6c757d;margin-bottom:3px}
    .value{font-weight:600}
    .actions{display:flex;flex-wrap:wrap;gap:10px;margin-top:14px}
    .btn-pill{border-radius:999px}
</style>

<div class="wrap">
    <div class="hero">
        {% if banque.logo %}
            <img class="logo" src="{{ asset(banque.logo) }}" alt="Logo {{ banque.nomBq }}">
        {% else %}
            <div class="logo d-flex align-items-center justify-content-center" style="color:#adb5bd;">—</div>
        {% endif %}

        <div>
            <h1 class="title">{{ banque.nomBq }}</h1>
            <div class="sub">Détails de la banque</div>
        </div>
    </div>

    <div class="box">
        <div class="rowish">
            <div>
                <div class="label">Email</div>
                <div class="value">{{ banque.emailBq ?: '—' }}</div>
            </div>
            <div>
                <div class="label">Téléphone</div>
                <div class="value">{{ banque.telephoneBq ?: '—' }}</div>
            </div>
            <div>
                <div class="label">Site web</div>
                <div class="value">
                    {% if banque.siteWeb %}
                        <a href="{{ banque.siteWeb }}" target="_blank">{{ banque.siteWeb }}</a>
                    {% else %}
                        —
                    {% endif %}
                </div>
            </div>
            <div>
                <div class="label">Statut</div>
                <div class="value">{{ banque.statut }}</div>
            </div>
        </div>

        <div class="mt-3">
            <div class="label">Description</div>
            <div>{{ banque.description ?: '—' }}</div>
        </div>

        <div class="actions">
            <a class="btn btn-outline-primary btn-pill" href="{{ path('admin_banque_edit', {id: banque.id}) }}">Modifier</a>
            <a class="btn btn-outline-dark btn-pill" href="{{ path('admin_banques_index', {banque: banque.id}) }}">Voir agences</a>
            <a class="btn btn-secondary btn-pill" href="{{ path('admin_banques_index') }}">Retour</a>
        </div>
    </div>
</div>
{% endblock %}