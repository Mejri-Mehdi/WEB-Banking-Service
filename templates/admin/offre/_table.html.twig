<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Banque</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Période</th>
                <th>Taux</th>
                <th>Actif</th>
            </tr>
        </thead>
        <tbody>
            {% for offre in offres %}
                <tr>
                    <td>{{ offre.id }}</td>
                    <td><strong>{{ offre.banque.nomBq }}</strong></td>
                    <td>{{ offre.titre }}</td>
                    <td><span class="badge bg-info">{{ offre.typeOffre|title }}</span></td>
                    <td>
                        <small>
                            <i class="bi bi-calendar-event"></i> {{ offre.dateDebut|date('d/m/Y') }}<br>
                            <i class="bi bi-calendar-x"></i> {{ offre.dateFin|date('d/m/Y') }}
                        </small>
                    </td>
                    <td>
                        {% if offre.taux %}
                            <strong>{{ offre.taux }}%</strong>
                        {% else %}
                            <span class="text-muted">-</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if offre.isCurrentlyActive() %}
                            <span class="badge bg-success">Actif</span>
                        {% else %}
                            <span class="badge bg-secondary">Expiré</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center py-5">
                        <div class="text-muted">Aucune offre trouvée.</div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
