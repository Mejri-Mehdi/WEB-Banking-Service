{% extends 'admin/base_admin.html.twig' %}

{% block title %}Analytics Services - AI Insights{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="h3 mb-0 text-gray-800">
                <i class="bi bi-graph-up-arrow text-primary me-2"></i>Analytics & AI Insights
            </h2>
            <p class="text-muted">Analyse avancée de la performance des services et recommandations.</p>
        </div>
    </div>

    <!-- AI Insights Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-primary text-white d-flex align-items-center">
                    <i class="bi bi-robot fs-4 me-2"></i>
                    <h5 class="mb-0 text-white">Recommandations IA</h5>
                </div>
                <div class="card-body bg-light">
                    {% if insights is empty %}
                        <div class="text-center py-3 text-muted">
                            <i class="bi bi-check-circle fs-2"></i>
                            <p>Tout semble optimal ! Aucune recommandation pour le moment.</p>
                        </div>
                    {% else %}
                        <div class="list-group">
                            {% for insight in insights %}
                                <div class="list-group-item list-group-item-action d-flex align-items-start border-0 mb-2 rounded shadow-sm">
                                    <div class="me-3 mt-1">
                                        <i class="{{ insight.icon }} fs-4 text-{{ insight.type }}"></i>
                                    </div>
                                    <div>
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1 fw-bold text-{{ insight.type }}">Insight #{{ loop.index }}</h6>
                                        </div>
                                        <p class="mb-1 text-dark">{{ insight.message|raw }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row">
        <!-- Top Services -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Services les plus demandés</h6>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="position: relative; height:300px;">
                        <canvas id="servicesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hourly Traffic -->
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Pic d'affluence (Heures)</h6>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="position: relative; height:300px;">
                        <canvas id="hoursChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Stats Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 font-weight-bold text-primary">Détails des Services</h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Service</th>
                            <th class="text-center">Total RDV</th>
                            <th class="text-center">Durée Estimée</th>
                            <th class="text-center">Tendance</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for stat in serviceStats %}
                            <tr>
                                <td class="ps-4 fw-bold">{{ stat.serviceName }}</td>
                                <td class="text-center">
                                    <span class="badge bg-primary rounded-pill">{{ stat.total }}</span>
                                </td>
                                <td class="text-center">{{ stat.estimatedDuration }} min</td>
                                <td class="text-center">
                                    {% if stat.total > 5 %}
                                        <span class="text-success"><i class="bi bi-arrow-up-right"></i> Haute</span>
                                    {% else %}
                                        <span class="text-muted"><i class="bi bi-dash"></i> Stable</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center py-4">Aucune donnée disponible.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const rawData = {{ chartData|raw }}; // JSON from Controller
        
        // Services Chart (Bar)
        const ctxServices = document.getElementById('servicesChart').getContext('2d');
        new Chart(ctxServices, {
            type: 'doughnut',
            data: {
                labels: rawData.services.labels,
                datasets: [{
                    data: rawData.services.data,
                    backgroundColor: [
                        '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        // Hours Chart (Line)
        const ctxHours = document.getElementById('hoursChart').getContext('2d');
        new Chart(ctxHours, {
            type: 'line',
            data: {
                labels: rawData.hours.labels,
                datasets: [{
                    label: 'Nombre de Rendez-vous',
                    data: rawData.hours.data,
                    borderColor: '#4e73df',
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    });
</script>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }
</style>
{% endblock %}
