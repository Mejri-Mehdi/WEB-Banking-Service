{% extends 'admin/base_admin.html.twig' %}

{% block title %}Détails Utilisateur{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">Détails de l'utilisateur</h1>
            <p class="text-muted">
                {{ user.fullName }} 
                <span class="badge {% if user.statutCompte == 'active' %}bg-success{% elseif user.statutCompte == 'pending' %}bg-warning text-dark{% else %}bg-danger{% endif %}">
                    {{ user.statutCompte|upper }}
                </span>
            </p>
        </div>
        <a href="{{ path('admin_users_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour
        </a>
    </div>

    <div class="row">
        <!-- Left Column: Personal Info -->
        <div class="col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informations Personnelles</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        {% if user.photo %}
                            <img src="{{ asset('uploads/photos/' ~ user.photo) }}" class="img-fluid rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;">
                        {% else %}
                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 120px; height: 120px;">
                                <i class="fas fa-user fa-4x text-gray-300"></i>
                            </div>
                        {% endif %}
                        
                        {% if qrCode is defined %}
                            <div class="mt-3">
                                <p class="small text-muted mb-1">Scanner pour contact</p>
                                <img src="{{ qrCode }}" alt="QR Code" style="width: 100px; height: 100px;">
                            </div>
                        {% endif %}
                    </div>
                    
                    <table class="table table-borderless">
                        <tr>
                            <th class="ps-0" style="width: 140px;">Nom Complet:</th>
                            <td class="text-dark fw-bold">{{ user.fullName }}</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Email:</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Téléphone:</th>
                            <td>{{ user.telephone|default('N/A') }}</td>
                        </tr>
                        <tr>
                            <th class="ps-0">CIN:</th>
                            <td>{{ user.cin|default('N/A') }}</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Adresse:</th>
                            <td>{{ user.adresse|default('N/A') }}</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Code Postal:</th>
                            <td>{{ user.codePostal|default('N/A') }}</td>
                        </tr>
                        <tr>
                            <th class="ps-0">Rôle:</th>
                            <td>
                                {% for role in user.roles %}
                                    {% if role != 'ROLE_USER' %}
                                        <span class="badge bg-info">{{ role }}</span>
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Column: Bank / pending data -->
        <div class="col-lg-7">
            {% if user.isAgent and user.pendingBankData %}
                <div class="card shadow mb-4 border-left-warning">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-warning bg-opacity-10">
                        <h6 class="m-0 font-weight-bold text-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>Demande d'affiliation Banque
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            Cet agent souhaite créer ou rejoindre la banque suivante.
                            Veuillez vérifier les informations avant d'approuver.
                        </div>

                        <table class="table table-bordered">
                            <tr>
                                <th class="bg-light" style="width: 200px;">Nom de la Banque</th>
                                <td class="fw-bold">{{ user.pendingBankData.bank_name }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Identifiant Agent</th>
                                <td>{{ user.pendingBankData.agent_identifiant }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Email Banque</th>
                                <td>{{ user.pendingBankData.bank_email }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Type</th>
                                <td>{{ user.pendingBankData.bank_type|default('N/A') }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Adresse Siège</th>
                                <td>{{ user.pendingBankData.bank_address|default('N/A') }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Code Postal</th>
                                <td>{{ user.pendingBankData.bank_postal_code|default('N/A') }}</td>
                            </tr>
                        </table>

                        <p class="mb-2 fw-bold">Actions requises :</p>
                        <ol class="small text-muted mb-4">
                            <li>Vérifiez si cette banque existe déjà dans <strong>Gestion Banques</strong>.</li>
                            <li>Si elle n'existe pas, créez-la.</li>
                            <li>Ajoutez l'agent à la banque.</li>
                            <li>Approuvez le compte de l'agent ci-dessous.</li>
                        </ol>
                    </div>
                </div>
            {% elseif user.banque %}
                 <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Banque Affiliée</h6>
                    </div>
                    <div class="card-body">
                        <h3>{{ user.banque.nomBq }}</h3>
                        <p>{{ user.banque.description|default('') }}</p>
                        <hr>
                        <div class="row">
                            <div class="col-6">
                                <strong>Email:</strong> {{ user.banque.email }}<br>
                                <strong>Tel:</strong> {{ user.banque.telephone }}
                            </div>
                            <div class="col-6 text-end">
                                <a href="{{ path('admin_banque_show', {'id': user.banque.id}) }}" class="btn btn-sm btn-outline-primary">
                                    Voir la banque
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Actions Administratives</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2">
                        {% if user.statutCompte == 'pending' %}
                            <form method="post" action="{{ path('admin_user_approve', {'id': user.id}) }}" onsubmit="return confirm('Voulez-vous vraiment approuver cet utilisateur ?');">
                                <button class="btn btn-success">
                                    <i class="fas fa-check me-2"></i>Approuver
                                </button>
                            </form>
                            <form method="post" action="{{ path('admin_user_reject', {'id': user.id}) }}" onsubmit="return confirm('Rejeter cet utilisateur ?');">
                                <button class="btn btn-danger">
                                    <i class="fas fa-times me-2"></i>Rejeter
                                </button>
                            </form>
                        {% elseif user.statutCompte == 'active' %}
                            <form method="post" action="{{ path('admin_user_block', {'id': user.id}) }}" onsubmit="return confirm('Bloquer cet utilisateur ?');">
                                <button class="btn btn-warning">
                                    <i class="fas fa-ban me-2"></i>Bloquer
                                </button>
                            </form>
                        {% elseif user.statutCompte == 'blocked' %}
                            <form method="post" action="{{ path('admin_user_unblock', {'id': user.id}) }}">
                                <button class="btn btn-info text-white">
                                    <i class="fas fa-unlock me-2"></i>Débloquer
                                </button>
                            </form>
                        {% endif %}

                        <div class="ms-auto">
                            <form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}" onsubmit="return confirm('ATTENTION: Cette action est irréversible. Supprimer ?');">
                                <button class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-2"></i>Supprimer définitivement
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
