{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Erreurs Symfony (form_errors) : rouge + sans puces */
        .form-error ul { margin: 6px 0 0; padding-left: 0; list-style: none; }
        .form-error li { color: #dc3545; font-size: .95rem; }
        .is-invalid { border-color: #dc3545 !important; }
        .field-help { color: #6b7280; font-size: .9rem; margin-top: 6px; }
    </style>
{% endblock %}

{% block body %}
<div class="bb-wrap">
    <div class="mb-3">
        <h1 class="bb-title">Ajouter une agence</h1>
        <p class="bb-sub">Banque: <strong>{{ banque.nomBq }}</strong> (ID {{ banque.id }})</p>
    </div>

    <div class="bb-card">
        {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

        <div class="bb-grid">
            <div class="bb-grid-1">
                {{ form_label(form.nom_ag) }}
                {{ form_widget(form.nom_ag, {
                    attr: {
                        class: 'form-control ' ~ (form.nom_ag.vars.errors|length ? 'is-invalid' : ''),
                        placeholder: "Nom de l'agence"
                    }
                }) }}
                <div class="form-error">{{ form_errors(form.nom_ag) }}</div>
            </div>

            <div class="bb-grid-1">
                {{ form_label(form.telephone) }}
                {{ form_widget(form.telephone, {
                    attr: {
                        class: 'form-control ' ~ (form.telephone.vars.errors|length ? 'is-invalid' : ''),
                        placeholder: "+216 ..."
                    }
                }) }}
                <div class="form-error">{{ form_errors(form.telephone) }}</div>
            </div>

            <div class="bb-grid-1">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {
                    attr: {
                        class: 'form-control ' ~ (form.email.vars.errors|length ? 'is-invalid' : ''),
                        placeholder: "contact@banque.tn"
                    }
                }) }}
                <div class="form-error">{{ form_errors(form.email) }}</div>
            </div>

            <div class="bb-grid-1">
                {{ form_label(form.adresse_ag) }}
                {{ form_widget(form.adresse_ag, {
                    attr: {
                        class: 'form-control ' ~ (form.adresse_ag.vars.errors|length ? 'is-invalid' : ''),
                        placeholder: "Adresse complète du siège ou de l'agence"
                    }
                }) }}
                <div class="form-error">{{ form_errors(form.adresse_ag) }}</div>
            </div>

            <div class="bb-grid-1">
                {{ form_label(form.horaires) }}
                {{ form_widget(form.horaires, {
                    attr: {
                        class: 'form-control ' ~ (form.horaires.vars.errors|length ? 'is-invalid' : ''),
                        placeholder: "Ex: Lun-Ven 08:30-16:00"
                    }
                }) }}
                <div class="form-error">{{ form_errors(form.horaires) }}</div>
            </div>
        </div>

        <div class="bb-actions">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a class="btn btn-secondary" href="{{ path('admin_banques_index', { banque: banque.id }) }}">Retour</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}